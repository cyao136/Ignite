<%= render partial: "comments/form", locals: {new_comment: new_comment, commenting_tag: commenting_tag} %>

<% if commenting_tag != "feedback" %>
  <div class="comments-container">
    <%= render partial: "comments/reply", locals: {comments: commentable.root_comments.tagged_with(commenting_tag)} %>
  </div>
<% else %>
  <div class="comments-container">
    <%= render partial: "comments/noreply", locals: {comments: commentable.root_comments.tagged_with(commenting_tag)} %>
  </div>
<% end %>


