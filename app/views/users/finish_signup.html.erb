<% provide(:title, "Create your account") %>

<div id="add-email" class="container">
  <h1>Add Email</h1>
  <%= form_for(current_user, :as => 'user', :url => finish_signup_path(current_user), :html => { role: 'form'}) do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <% if f.object.errors.any? %>
      <div id="error_explanation">
        <% f.object.errors.full_messages.each do |msg| %>
          <%= msg %><br>
        <% end %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
      <p class="help-block">Please create a unique username.</p>

      <%= f.label :email %>
      <div class="controls">
        <%= f.text_field :email, class: 'form-control' %>
        <p class="help-block">Please confirm your email address.</p>
      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Continue', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>