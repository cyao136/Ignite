<div class="row">
	<nav class="navbar navbar-full navbar-light" style="background-color: $header;">
		<ul class="nav navbar-nav pull-xs-left">
			<a class="navbar-brand" href="/">
				<%= image_tag("ignite_logo_text_brand.png", alt: "Home", height: "30") %>
			</a>
			<li class="nav-item <%= is_active?('/browse') %>">
				<a class="nav-link" href="<%= browse_path %>">Browse</a>
			</li>
		</ul>


		<form action="/browse/search" method="GET" class="nav-item col-xs-4">
			<div class="input-group">
				<input name="name" id="name" class="form-control" placeholder="Search"></input>
				<span class="input-group-addon">
				<button type="submit" style="float: right; border: 0; background: transparent">
				    <span class="fa fa-search"></span>
				</button></span>
			</div>
		</form>

		
		<button class="navbar-toggler hidden-lg-up pull-xs-right" type="button" data-toggle="collapse" data-target="#navbarcollapsable">
			&#9776;
		</button>

		<div class="collapse navbar-toggleable-md" id="navbarcollapsable">
			<ul class="nav navbar-nav pull-xs-right">
				<% if user_signed_in? %>
				  <li class="nav-item">
					<a class="nav-link" <%= link_to "My Account", current_user %></a>
				  </li>
				<% else %>
				  <li class="nav-item <%= is_active?('/users/sign_in') %>">
					<a class="nav-link" href="<%= new_user_session_path %>">Log in</a>
				  </li>
				  <li class="nav-item <%= is_active?('/users/sign_up') %>">
					<a class="nav-link" href="<%= new_user_registration_path %>">Sign Up</a>
				  </li>
				<% end %>
			</ul>
		</div>
	</nav>
</div>